<h1>Library Mangement System</h1>
<% if @error.present? %>
  <h2><%= @error %></h2>
<% end %>

<p class="notice"><%= flash[:notice] %></p>
<p class="alert"><%= flash[:alert] %></p>
<%= form_for :login_request, url: login_path, local: true do |f| %>
  <p>
    <%= f.label :user %><br/>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'login'%>
  </p>
<% end %>

<p><%= link_to 'SIGN UP', sign_up_path %></p>