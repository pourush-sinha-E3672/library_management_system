<h1>Library Mangement System</h1>
<% if @error.present? %>
  <h1><%= @error %></h1>
<% end %>

<p class="notice"><h2 style="color:#ff0000;"><%= flash[:notice] %></h2></p>
<p class="alert""><h2 style="color:#ff0000;"><%= flash[:alert] %></h2></p>
<%= form_for :login_request, url: login_path, local: true do |f| %>
  <p>
    <%= f.label :user %><br/>
    <%= f.text_field :user %>
  </p>
  <p>
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.submit 'login'%>
  </p>
<% end %>

<p><%= link_to 'SIGN UP', sign_up_path %></p>